# ===========================================
# Residencias Chable - Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the actual .env file to version control

# ===========================================
# ðŸ”´ REQUIRED VARIABLES - MUST BE SET
# ===========================================
# These variables are essential for the application to function

# ===========================================
# AI & OpenAI Configuration (REQUIRED)
# ===========================================
# Your OpenAI API key for GPT models - GET THIS FROM OPENAI.COM
OPENAI_API_KEY=sk-your-openai-api-key-here

# Store ID for vector store and AI handler
STORE_ID=residencias_chable_default

# ===========================================
# Twilio Configuration (REQUIRED)
# ===========================================
# Twilio Account SID - GET FROM TWILIO CONSOLE
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Twilio Auth Token - GET FROM TWILIO CONSOLE
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# WhatsApp Business Number (format: whatsapp:+1234567890)
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# ===========================================
# Database Configuration (REQUIRED)
# ===========================================
# Option 1: Full Database URL (recommended for production)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Option 2: Individual Database Components (alternative)
# DB_USER=your_db_username
# DB_PASSWORD=your_db_password
# DB_NAME=residencias_chable_db
# DB_HOST=localhost
# DB_PORT=5432

# ===========================================
# Application Configuration (REQUIRED)
# ===========================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# ===========================================
# Security (REQUIRED)
# ===========================================
# Secret key for JWT tokens and session management
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# ===========================================
# ðŸŸ¡ OPTIONAL VARIABLES - NICE TO HAVE
# ===========================================
# These variables enhance functionality but are not required

# ===========================================
# Twilio Extensions (OPTIONAL)
# ===========================================
# Twilio Status Callback URL
TWILIO_STATUS_CALLBACK_URL=https://your-app-url.com/twilio/status

# ===========================================
# CRM Integration (OPTIONAL)
# ===========================================
# HubSpot API Key for CRM integration
HUBSPOT_API_KEY=your_hubspot_api_key_here

# Lasso CRM API Key for property-specific lead injection
LASSO_API_KEY=your_lasso_api_key_here

# ===========================================
# Application Extensions (OPTIONAL)
# ===========================================
# Application URL (for webhooks and callbacks)
APP_URL=http://localhost:8000

# JWT Secret (if using JWT authentication)
JWT_SECRET=your-jwt-secret-key-here

# ===========================================
# Vector Store Configuration (OPTIONAL)
# ===========================================
# Vector store API key (if using external vector store)
VECTOR_STORE_API_KEY=your_vector_store_api_key

# Vector store URL (if using external vector store)
VECTOR_STORE_URL=https://your-vector-store-url.com

# ===========================================
# File Storage Configuration (OPTIONAL)
# ===========================================
# AWS S3 Configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=residencias-chable-files
AWS_REGION=us-east-1

# ===========================================
# Email Configuration (OPTIONAL)
# ===========================================
# SMTP Configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@residenciaschable.com

# ===========================================
# Monitoring & Analytics (OPTIONAL)
# ===========================================
# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics ID
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# ===========================================
# Development & Testing (OPTIONAL)
# ===========================================
# Test phone number for development
TEST_PHONE_NUMBER=+1234567890

# Test WhatsApp number for development
TEST_WHATSAPP_NUMBER=whatsapp:+1234567890

# ===========================================
# Render.com Specific (OPTIONAL)
# ===========================================
# Render automatically provides these, but you can override:
# PORT=8000
# RENDER=true

# ===========================================
# ðŸ“‹ QUICK START CHECKLIST
# ===========================================
# To get your app running, you MUST set these variables:
# âœ… OPENAI_API_KEY
# âœ… TWILIO_ACCOUNT_SID
# âœ… TWILIO_AUTH_TOKEN
# âœ… TWILIO_WHATSAPP_NUMBER
# âœ… DATABASE_URL (or DB_* variables)
